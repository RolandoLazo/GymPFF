@model GymPFF.Models.Actividad

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Actividad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ActividadId" />
            <div class="form-group">
                Nombre de la Actividad
                <input asp-for="NombreActividad" class="form-control" />
                <span asp-validation-for="NombreActividad" class="text-danger"></span>
            </div>
            <div class="form-group">
                Descripción
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                Tarifa
                <select asp-for="TarifaId" class="form-control" asp-items="ViewBag.TarifaId"></select>
                <span asp-validation-for="TarifaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
