@model GymPFF.Models.Clase

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Clase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Dia Establecido
                <input asp-for="DiaEstablecido" class="form-control" />
                <span asp-validation-for="DiaEstablecido" class="text-danger"></span>
            </div>
            <div class="form-group">
                Hora de inicio
                <input asp-for="HInicio" class="form-control" />
                <span asp-validation-for="HInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                Sala Asignada
                <select asp-for="SalaId" class ="form-control" asp-items="ViewBag.SalaId"></select>
            </div>
            <div class="form-group">
                Numero de Actividad
                <select asp-for="ActividadId" class ="form-control" asp-items="ViewBag.ActividadId"></select>
            </div>
            <div class="form-group">
                Numero de Empleado
                <select asp-for="EmpleadoId" class ="form-control" asp-items="ViewBag.EmpleadoId"></select>
            </div>
            <div class="form-group">
                Numero de cliente
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
